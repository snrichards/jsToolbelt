{
  "name": "jstoolbelt",
  "version": "1.0.0",
  "description": "Javascript utility for the browser",
  "main": "src/index.js",
  "scripts": {
    "build": "webpack --mode=development",
    "build:min": "webpack --output-filename jsToolbelt.min.js -p",
    "prettify": "prettier --write ./src/**/*.js",
    "lint": "eslint --fix ./src",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/snrichards/jsToolbelt.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/snrichards/jsToolbelt/issues"
  },
  "homepage": "https://github.com/snrichards/jsToolbelt#readme",
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.42",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0-beta.42",
    "@babel/plugin-syntax-object-rest-spread": "^7.0.0-beta.42",
    "@babel/preset-env": "^7.0.0-beta.42",
    "@babel/preset-stage-2": "^7.0.0-beta.42",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-babel": "^7.0.2",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.10.0",
    "husky": "^0.15.0-rc.13",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.2",
    "prettier": "^1.11.1",
    "webpack": "^4.4.1",
    "webpack-cli": "^2.0.13"
  },
  "jest": {
    "bail": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*/**/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "testMatch": [
      "**/test.js"
    ]
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run prettify",
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  }
}
